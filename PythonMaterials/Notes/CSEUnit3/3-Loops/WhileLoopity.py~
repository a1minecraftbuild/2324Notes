for i in range(5):
        number=random.randint(1,13)
        if number==1:
                number="Ace"
        elif number == 11:
                number="Jack"
        elif number==12:
                number="Queen"
        elif number==13:
                number="King"
        suits=["hearts","diamonds","spades","clubs"]
